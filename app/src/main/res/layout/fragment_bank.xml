<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankFragment"
    android:background="@color/black">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marvell" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Choose How to Pay"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Credit / Debit Card"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/netbank"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="NetBanking"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Movies and Series $20/mth                         Change"
        android:textSize="15sp"
        android:textColor="@color/qizil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/netbank" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/contpay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="36dp"
        android:backgroundTint="#EC0F0F"
        android:text="Continue"
        android:textColor="#fff"
        android:textSize="29sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>